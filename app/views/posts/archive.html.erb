<%= render "menu/menu" %>

<div class="container">
	<table class="table-striped all-posts">
		<tr>
			<th>Title</th>
			<th>Author</th>
			<th>Category</th>
			<th>Date Created</th>
			<th colspan="2">Actions</th>
		</tr>
		<% @posts.each do |post| %>
		<tr>
			<td><%= link_to post.title, post_path(post) %></td>
			<td><%= post.author && post.author.name %></td>
			<td><%= post.category && post.category.category %></td>
			<td><%= post.created_at.strftime('%b %d, %Y') %></td>
			<td><%= link_to "EDIT", edit_post_path(post) %></td>
			<td><%= link_to "DELETE", post_path(post), 
			method: :delete,
			data: { confirm: "Are you sure you want to delete this post?" } %></td>
		</tr>
		<% end %>
	</table>
	
	<%= link_to "New Post", new_post_path %>
</div>

<div class="right-container">

</div>