.container
  %table.table-striped.all-posts
    %tr
      %th Title
      %th Author
      %th Category
      %th Date Created
      %th{:colspan => "2"} Actions
    - @posts.each do |post|
      %tr
        %td= link_to post.title, post_path(post)
        %td= post.author && post.author.name
        %td= post.category && post.category.category
        %td= post.created_at.strftime('%b %d, %Y')
        - if admin_signed_in?
          %td= link_to "EDIT", edit_post_path(post)
          %td= link_to "DELETE", post_path(post),                              |
              method: :delete,                                                |
              data: { confirm: "Are you sure you want to delete this post?" } |
  = link_to "New Post", new_post_path
.right-container
