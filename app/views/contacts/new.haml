.container
  .row
    .col-lg-8.col-lg-offset-2.col-md-10.col-md-offset-1
      %p Want to get in touch with me? Send a message!
      = simple_form_for @contact, :html => {:class => 'form-group col-xs-12 floating-label-form-group controls' }, :input_html => {:class => 'form-control' } do |f|
        %label Name
        .row.control-group
          = f.input :name, :required => true, label: false, :placeholder => "Name"
        %label Email
        .row.control-group
          = f.input :email, :required => true, label: false, :placeholder => "Email"
        %label Message
        .row.control-group
          = f.input :message, :as => :text, :required => true, label: false, :placeholder => "Message"
          %div
          = f.button :submit, 'Send message', :class=> "btn btn-primary"


